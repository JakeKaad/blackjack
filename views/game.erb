<div id='game'>
	
	<div class='well'>
		<h5>Dealer's hand:</h5>
		<% if session[:dealer_turn] %>
			<%= erb :dealer_turn %>
		<% elsif @game_over %>
			<%= erb :game_over %>
		<% else %>	
			<%= image_source(session[:dealer_hand].first) %>
		 	<img src='images/cards/cover.jpg' class='card_image'/>
		<% end %>
	</div>

	<div class='well'>
		<h5>Player's hand:</h5>
		<% session[:player_hand].each do |card| %>
		  <%= image_source(card) %>
		<% end %>
		<h6 class="total">Player's total: <%= session[:player_total] %></h6>
	</div>
	<% unless session[:dealer_turn] || @game_over %>
		<%= erb :player_buttons %>
	<% end %>

	<% if @game_over %>
		Would you like to play again?
		<form method='post', action='/again'>
		  <input type='radio', name='yes_or_no', value="yes", checked/>Yes
		  <input type='radio', name='yes_or_no', value="no"/>No
		  <input type='submit', class='btn btn-primary' />
		</form>
	<% end %>

</div>




